<AnchorPane id="AnchorPane" prefHeight="323.0" prefWidth="460.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recrutini.GUI.ForgotPasswordController">
   <children>
      <Pane layoutX="7.0" layoutY="3.0" prefHeight="362.0" prefWidth="453.0">
         <children>
            <ImageView fx:id="imageview" fitHeight="146.0" fitWidth="167.0" layoutX="433.0" layoutY="454.0" pickOnBounds="true" preserveRatio="true" />
            <TextField fx:id="mail" layoutX="97.0" layoutY="158.0" prefHeight="35.0" prefWidth="237.0" promptText="Enter your Email">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Label layoutX="58.0" layoutY="14.0" opacity="0.5" prefHeight="80.0" prefWidth="375.0" text="Forgot your password ?">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label layoutX="75.0" layoutY="94.0" prefHeight="17.0" prefWidth="249.0" text="just tell us the email address you registered" />
            <Button fx:id="btnin" layoutX="190.0" layoutY="221.0" mnemonicParsing="false" onAction="#send" text="Send " />
         </children>
      </Pane>
      <Label fx:id="btnfo" layoutX="139.0" layoutY="271.0" onMousePressed="#Signup" prefHeight="17.0" prefWidth="199.0" text="Don't have an account ? Sign up" textFill="#4b00ee" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </children>
</AnchorPane>
