<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="364.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recrutini.GUI.ResetPasswordController">
   <children>
      <Pane prefHeight="367.0" prefWidth="470.0">
         <children>
            <ImageView fx:id="imageview" fitHeight="146.0" fitWidth="167.0" layoutX="433.0" layoutY="454.0" pickOnBounds="true" preserveRatio="true" />
            <Label layoutX="58.0" layoutY="14.0" opacity="0.5" prefHeight="80.0" prefWidth="375.0" text="Reset your password ?">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <TextField fx:id="code" layoutX="96.0" layoutY="107.0" prefHeight="35.0" prefWidth="237.0" promptText="your verification code">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Label fx:id="btnfo" layoutX="139.0" layoutY="268.0" onMousePressed="#forgot" prefHeight="17.0" prefWidth="188.0" text="you did not receive a code ?" underline="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
            <Label fx:id="alert" layoutX="97.0" layoutY="145.0" prefHeight="17.0" prefWidth="178.0" text="your code is valid for 60  seconds" textFill="RED" />
            <Button fx:id="btnin" layoutX="175.0" layoutY="223.0" mnemonicParsing="false" onAction="#send" prefHeight="25.0" prefWidth="65.0" text="Reset" />
            <PasswordField fx:id="password" layoutX="99.0" layoutY="175.0" prefHeight="35.0" prefWidth="237.0" promptText="new password">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </PasswordField>
         </children>
      </Pane>
   </children>
</AnchorPane>
