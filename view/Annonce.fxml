                  <ImageView fitHeight="31.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/projects.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnJobs" contentDisplay="TOP" mnemonicParsing="false" onAction="#Jobs" prefHeight="66.0" prefWidth="89.0" styleClass="button3" stylesheets="@stylesheet.css" text="Job" textFill="WHITE">
