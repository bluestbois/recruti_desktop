                     <image>
                        <Image url="@../img/blog-01.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnFreelance" contentDisplay="TOP" mnemonicParsing="false" prefHeight="66.0" prefWidth="92.0" styleClass="button3" stylesheets="@stylesheet.css" text="Freelance" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="33.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/workspace.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnProjects" contentDisplay="TOP" mnemonicParsing="false" onAction="#Projects" prefHeight="66.0" prefWidth="86.0" styleClass="button3" stylesheets="@stylesheet.css" text="Project" textFill="WHITE">
