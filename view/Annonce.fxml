                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Label>
            <RadioButton fx:id="tri1" layoutX="952.0" layoutY="157.0" mnemonicParsing="false" onAction="#tri_date" text="Tri par date">
               <toggleGroup>
                  <ToggleGroup fx:id="tri" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="tri2" layoutX="953.0" layoutY="187.0" mnemonicParsing="false" onAction="#tri_Titre" text="Tri par titre" toggleGroup="$tri" />
