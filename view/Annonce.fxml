                  <Label fx:id="userlabel" layoutX="14.0" layoutY="25.0" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label layoutX="206.0" layoutY="21.0" text="Liste des annonces" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="24.0" />
                     </font>
                  </Label>
