               </columns>
            </TableView>
            <Button fx:id="ajouter" layoutX="884.0" layoutY="612.0" mnemonicParsing="false" onAction="#ajouter" styleClass="buttonCRUD" stylesheets="@stylesheet.css" text="Ajouter une annonce" textFill="WHITE">
